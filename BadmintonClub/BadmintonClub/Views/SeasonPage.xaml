<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BadmintonClub.Views.SeasonPage">

    <ContentPage Title="Season Table">
        
        <ContentPage.Content>
            <ListView x:Name="SeasonTableListView"
                      ItemsSource="{Binding Users}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding FullName}" 
                                       WidthRequest="100" 
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       HorizontalOptions="FillAndExpand"/>
                                <Label Text="{Binding GamesPlayed}"
                                       WidthRequest="20" />
                                <Label Text="{Binding GamesWon}"
                                       WidthRequest="20" />
                                <Label Text="{Binding PointsInCurrentSeason}"
                                       WidthRequest="20" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ContentPage.Content>
    </ContentPage>
    
    <ContentPage Title="Season Stats" />
</TabbedPage>